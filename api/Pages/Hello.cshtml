@page
@model HelloModel
@{
    var name = Request.Query["name"];
    var age = Request.Query["age"];
}

<!DOCTYPE html>
<html>
<head>
    <title>Hello Page</title>
</head>
<body>
    @if (name.ToString().StartsWith("v"))
    {
        <h1>Hello, great @name!</h1>
    }
    else
    {
        <h1>Hello, @name!</h1>
    }
    <p> Employee @name @age years old added! </p>
</body>
</html>
